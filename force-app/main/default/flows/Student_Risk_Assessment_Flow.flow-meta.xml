<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <description>Automatically calculates risk scores when student records are updated</description>
    <environments>Default</environments>
    <interviewLabel>Student Risk Assessment {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Student Risk Assessment Flow</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Student_Risk_Score</targetReference>
        </connector>
        <object>Student__c</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <formulas>
        <description>Calculate risk score based on various factors</description>
        <name>Calculate_Risk_Score</name>
        <dataType>Number</dataType>
        <expression>IF(ISBLANK({!$Record.GPA__c}), 0, IF({!$Record.GPA__c} &lt; 2.0, 40, IF({!$Record.GPA__c} &lt; 2.5, 30, IF({!$Record.GPA__c} &lt; 3.0, 20, IF({!$Record.GPA__c} &lt; 3.5, 10, 0)))))</expression>
        <scale>2</scale>
    </formulas>
    <recordUpdates>
        <description>Update the student record with calculated risk score</description>
        <name>Update_Student_Risk_Score</name>
        <label>Update Student Risk Score</label>
        <locationX>50</locationX>
        <locationY>134</locationY>
        <inputAssignments>
            <field>Risk_Score__c</field>
            <value>
                <elementReference>Calculate_Risk_Score</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
</Flow>