<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Course_Credits_Validation</fullName>
    <active>true</active>
    <description>Ensures course credits are positive</description>
    <errorConditionFormula>Credit_Hours__c &lt;= 0</errorConditionFormula>
    <errorDisplayField>Credit_Hours__c</errorDisplayField>
    <errorMessage>Course credits must be greater than 0</errorMessage>
</ValidationRule>