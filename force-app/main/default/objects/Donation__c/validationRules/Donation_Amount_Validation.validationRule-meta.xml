<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Donation_Amount_Validation</fullName>
    <active>true</active>
    <description>Ensures donation amount is positive</description>
    <errorConditionFormula>Amount__c &lt;= 0</errorConditionFormula>
    <errorDisplayField>Amount__c</errorDisplayField>
    <errorMessage>Donation amount must be greater than 0</errorMessage>
</ValidationRule>
